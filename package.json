{
  "name": "node-modules-analyzer-core",
  "version": "1.0.13",
  "description": "",
  "engines": {
    "node": ">=10.0.0"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "test:all": "yarn lint && yarn build && yarn type-check && yarn test",
    "coverage": "yarn test --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext js,ts,tsx",
    "clean": "lerna exec -- yarn clean",
    "build": "lerna exec --concurrency 1 -- yarn build",
    "release": "lerna publish"
  },
  "author": {
    "name": "PlayMa256",
    "email": "matheus.g.silva@hotmail.com",
    "url": "https://github.com/playma256"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/playma256/node-modules-analyzer",
  "bugs": {
    "url": "https://github.com/playma256/node-modules-analyzer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playma256/node-modules-analyzer.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.0",
    "@babel/core": "^7.10.0",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "babel-eslint": "^10.0.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.22.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn install"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn run format",
      "git add"
    ]
  }
}
