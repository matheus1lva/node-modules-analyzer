{
  "name": "node-modules-analyzer",
  "version": "1.0.13",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "node-modules-analyzer": "bin/index.js"
  },
  "files": [
    "README.md",
    "dist/",
    "bin/",
    "package.json",
    "print.png"
  ],
  "scripts": {
    "lint": "eslint . && yarn run lint:lockfile",
    "lint:fix": "eslint . --fix",
    "format": "prettier --config .prettierrc.js --write '**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage:view": "open-cli coverage/lcov-report/index.html",
    "semantic-release": "semantic-release",
    "lint:lockfile": "lockfile-lint --path yarn.lock --validate-https --allowed-hosts npm yarn",
    "build": "babel src --out-dir dist/ --extensions '.ts'",
    "prepublish": "yarn build"
  },
  "author": {
    "name": "PlayMa256",
    "email": "matheus.g.silva@hotmail.com",
    "url": "https://github.com/playma256"
  },
  "license": "Apache-2.0",
  "keywords": [
    ""
  ],
  "homepage": "https://github.com/playma256/node-modules-analyzer",
  "bugs": {
    "url": "https://github.com/playma256/node-modules-analyzer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playma256/node-modules-analyzer.git"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "cli-highlight": "^2.1.4",
    "yargs-parser": "^18.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.0",
    "@babel/core": "^7.10.0",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-typescript": "^7.9.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn install"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn run format",
      "git add"
    ]
  }
}
